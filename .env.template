# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Logging Configuration
LOG_LEVEL=INFO

# Search Configuration (optional)
MAX_SEARCH_RESULTS=25
SEARCH_TIMEOUT=30
MAX_RETRIES=3

# Bot Behavior (optional)
ENABLE_DOWNLOAD_LINKS=true
MAX_RESULTS_PER_MESSAGE=5

# LibGen Mirror Preferences (optional)
# Search mirrors will be tried in order, one attempt each
# Based on working mirrors from libgen.la site analysis
LIBGEN_SEARCH_MIRRORS=https://libgen.la,https://libgen.li,https://libgen.vg,https://libgen.bz,https://libgen.gl

# Download mirrors for getting direct download links
# These should match the working search mirrors
LIBGEN_DOWNLOAD_MIRRORS=https://libgen.la,https://libgen.li,https://libgen.vg,https://libgen.bz

# Rate Limiting (optional)
REQUESTS_PER_SECOND=2
CONCURRENT_SEARCHES=3
