# =============================================================================
# LibGen Telegram Bot Configuration
# Copy this file to .env and customize your settings
# =============================================================================

# =============================================================================
# TELEGRAM BOT SETTINGS
# =============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Document sending settings
TELEGRAM_SEND_DOCUMENT=false
TELEGRAM_MAX_DOWNLOAD_MB=50

# =============================================================================
# PROXY SETTINGS (Optional)
# =============================================================================
# Uncomment and configure if you need proxy access
# HTTP_PROXY=http://127.0.0.1:2080
# HTTPS_PROXY=http://127.0.0.1:2080

# =============================================================================
# LIBGEN SEARCH MIRRORS (September 2025 - Optimized for English Books)
# =============================================================================
# PRIMARY MIRRORS - Optimized Priority Order for English Book Retrieval
# Rank #1: libgen.la / libgen.li (Top performers for English books)
# Rank #2-5: Other "Format 2" mirrors (libgen.gl, libgen.vg, libgen.bz)
# Additional: Russian mirrors and backups
LIBGEN_SEARCH_MIRRORS=https://libgen.la,https://libgen.li,https://libgen.gl,https://libgen.vg,https://libgen.bz,http://libgen.rs,http://gen.lib.rus.ec,https://libgen.fun,https://libgen.is

# Download mirrors for getting book links (same priority order)
LIBGEN_DOWNLOAD_MIRRORS=https://libgen.la,https://libgen.li,https://libgen.gl,https://libgen.vg,https://libgen.bz,http://libgen.rs,http://gen.lib.rus.ec,https://libgen.fun,https://libgen.is,http://library.lol

# =============================================================================
# SEARCH SETTINGS
# =============================================================================
# Maximum results to return per search
LIBGEN_MAX_RESULTS=200

# Maximum results to request from each mirror
LIBGEN_MIRROR_REQUEST_LIMIT=300

# Whether to resolve get.php links to final URLs and filenames
LIBGEN_RESOLVE_FINAL_URLS=true

# Search timeout in seconds
LIBGEN_SEARCH_TIMEOUT=30

# Maximum retries per mirror
LIBGEN_MAX_RETRIES=1

# =============================================================================
# BOT BEHAVIOR SETTINGS
# =============================================================================
# Number of books to show per page
BOT_BOOKS_PER_PAGE=5

# Maximum number of download links to show per book
BOT_MAX_LINKS_PER_BOOK=8

# Timeout for fetching download links (seconds)
BOT_DOWNLOAD_LINKS_TIMEOUT=10

# Number of alternative search links to show for books without MD5
BOT_MAX_ALTERNATIVE_LINKS=3

# =============================================================================
# ALTERNATIVE SOURCES (Shadow-Library Meta-Search & Others)
# =============================================================================
# Anna's Archive domains (aggregates LibGen, Z-Library, Sci-Hub)
ANNAS_ARCHIVE_DOMAINS=https://annas-archive.org,https://annas-archive.li,https://annas-archive.se

# Z-Library domains
ZLIBRARY_DOMAINS=https://z-library.sk

# Additional library sources
ADDITIONAL_LIBRARY_SOURCES=http://library.lol

# Legal repositories
LEGAL_REPOSITORIES=https://cyberleninka.ru

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# MESSAGE CUSTOMIZATION
# =============================================================================
# Bot name and description
BOT_NAME=LibGen Search Bot
BOT_DESCRIPTION=Search for books by sending me a book title, author name, or ISBN.

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Delay between processing books (seconds) - helps with stop command responsiveness
BOT_BOOK_PROCESSING_DELAY=0.1

# Cancellation check interval (seconds) - how often to check for stop requests
BOT_CANCELLATION_CHECK_INTERVAL=0.25

# Number of cancellation checks during download link fetching
BOT_CANCELLATION_CHECKS_COUNT=20

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# User-Agent string for HTTP requests
HTTP_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/123.0 Safari/537.36

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_DOWNLOAD_LINKS=true
FEATURE_ALTERNATIVE_SEARCH=true
FEATURE_PAGINATION=true
FEATURE_STOP_COMMAND=true
